<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, '状態' %>
  <%= f.select :status, [["未着手", "未着手"], ["作業中", "作業中"], ["完了", "完了"]] %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.submit '追加' %>
<% end %>