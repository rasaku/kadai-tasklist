<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <form class="form-horizontal">
        <div class="form-group">
          <%= f.label :status, '状態' %>
          <%= f.select :status, [["未着手", "未着手"], ["作業中", "作業中"], ["完了", "完了"]], {}, class: 'form-control' %>
        </div>
      <div class="form-group">
          <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
  
      <%= f.submit '追加', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>