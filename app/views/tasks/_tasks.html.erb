<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>状態</th>
      <th>タスク</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
        <td>
        <% if current_user == task.user %>
          <%= link_to "削除", task, method: :delete, data: { confirm: "削除しますか？" }, class: 'btn btn-danger btn-xs' %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate tasks %>