<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@task) do |f| %>
      <form class="form-horizontal">
        <div class="form-group">
          <%= f.label :status, '状態' %>
          <%= f.select :status, [["未着手", "未着手"], ["作業中", "作業中"], ["完了", "完了"]], {}, class: 'form-control' %>
        </div>
      <div class="form-group">
          <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
        <%= f.submit 'タスク追加', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>タスクリスト</h1>
      <%= link_to 'ユーザ登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>